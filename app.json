{
  "expo": {
    "name": "LYNKD",
    "slug": "lynkd-social-commerce",
    "version": "1.2",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "lynkdmobile",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "icon": "./assets/images/adaptive-icon2.png",
      "buildNumber": "15",
      "bundleIdentifier": "com.lynkd.socialcommerce",
      "googleServicesFile": "./GoogleService-Info.plist",
      "supportsTablet": true,
      "requireFullScreen": false,
      "infoPlist": {
        "UIBackgroundModes": [
          "remote-notification"
        ],
        "ITSAppUsesNonExemptEncryption": false,
        "NSAppTransportSecurity": {
          "NSAllowsLocalNetworking": true,
          "NSAllowsArbitraryLoadsForMedia": true
        },
        "NSCameraUsageDescription": "We use the camera only when you choose to take a photo/video for posts, stories, or your profile/banner.",
        "NSMicrophoneUsageDescription": "We use the microphone only while you record videos or voice notes.",
        "NSPhotoLibraryUsageDescription": "We access your photo library only when you choose images/videos to upload for posts or your profile/banner. Only the items you select are uploaded.",
        "NSPhotoLibraryAddUsageDescription": "We save a copy of edited media to your library when you tap Save."
      },
      "podfileProperties": {
        "ios.buildReactNativeFromSource": "true",
        "ios.useModularHeaders": "true"
      },
      "entitlements": {
        "com.apple.developer.applesignin": [
          "Default"
        ],
        "aps-environment": "production"
      },
      "usesAppleSignIn": true,
      "appleTeamId": "XRMMM25R2C"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "edgeToEdgeEnabled": true,
      "softwareKeyboardLayoutMode": "pan",
      "package": "com.lynkd.socialcommerce",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "com.google.android.gms.permission.AD_ID"
      ],
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/splash3.png",
          "resizeMode": "contain",
          "backgroundColor": "#1a1a1a",
          "imageWidth": 200,
          "imageRoundedCorners": false
        }
      ],
      [
        "expo-video",
        {
          "supportsBackgroundPlayback": false,
          "supportsPictureInPicture": false
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) photos/videos for posts, stories, or your profile/banner.",
          "microphonePermission": "Allow $(PRODUCT_NAME) to record audio while making videos or voice notes.",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow $(PRODUCT_NAME) photos/videos to upload for posts or your profile.",
          "savePhotosPermission": "Allow $(PRODUCT_NAME) photos/videos back to your library.",
          "isAccessMediaLocationEnabled": true,
          "granularPermissions": [
            "audio",
            "photo"
          ]
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ],
      "expo-notifications",
      "@react-native-firebase/app",
      "@react-native-firebase/messaging",
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      "@react-native-firebase/crashlytics",
      [
        "expo-secure-store",
        {
          "configureAndroidBackup": true,
          "faceIDPermission": "Allow $(PRODUCT_NAME) to access your Face ID biometric data."
        }
      ],
      [
        "expo-tracking-transparency",
        {
          "userTrackingPermission": "This identifier will be used to deliver personalized ads to you."
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      "./plugins/ios-podfile-properties.js",
      "expo-font",
      "expo-asset"
    ],
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "API_URL": "https://api.lynkd.app",
      "eas": {
        "projectId": "5811046d-e73c-4f54-8ee1-1795491f0d16"
      }
    },
    "owner": "mukesh2000"
  }
}
